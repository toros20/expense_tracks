<div class="container  p-4">
    <div class="row m-2">

        <div class="col-md-3">
            <div class="card text-center">
                <a href="/api/accounts/create">
                    <p><i class="fas fa-plus-circle fa-5x m-2"></i></p>
                    <div class="card-body">
                    <h3 class="card-title">New Account</h3>
                    </div>
                </a> 
            </div>
        </div>

        {{#each accounts}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="">
                            <h3 class="card-title text-uppercase">
                                {{name}}
                            </h3>
                        </a>
                        <p class="m-2"> {{details}} </p>
                        <h3 class="card-title">{{balance}} </h3>
                        <a href=" " class="btn btn-danger">Delete</a>
                        <a href="" class="btn btn-warning">Edit</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>