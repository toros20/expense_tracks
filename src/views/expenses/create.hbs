<div class = "container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card" >
                <div class="card-body">
                    <div class="card-title">Create New Expense Track</div>
                    <form action="/api/expenses/" method="POST">
                     <div class="form-group">
                            <select name="category_id" class="form-control" aria-placeholder="type">
                                 <option value="0">Select Account Origin</option>
                                {{#each categories}}
                                    <option value="{{id}}">{{name}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="name" placeholder="Name Income" autofocus>
                        </div>
                        <div class="form-group">
                            <textarea name="details" rows="4" class="form-control" placeholder="Details"></textarea>
                        </div>
                        <div class="form-group">
                            <select name="account" class="form-control" aria-placeholder="type">
                                 <option value="0">Select Account Origin</option>
                                {{#each types}}
                                    <option value="{{type}}">{{type}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="number" name="quantity" min="0" class="form-control" placeholder="Quantity">
                        </div>

                        <input type="hidden" name="user_id" value="-1">
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">
                                SAVE
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>